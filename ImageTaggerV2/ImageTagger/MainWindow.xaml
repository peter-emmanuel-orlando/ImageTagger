<Window x:Class="ImageTagger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageTagger"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainPanel" Background="#FFFFF0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="2" Background="#3F529DB0" Panel.ZIndex="9999999">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="140" Width="0*"/>
                <ColumnDefinition MinWidth="5"/>
            </Grid.ColumnDefinitions>
            <GridSplitter HorizontalAlignment="Left" Width="5" Background="#3FF400FF" Grid.Column="1" Panel.ZIndex="9999999" VerticalContentAlignment="Stretch"/>
            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                <WrapPanel Background="#6630D6BB">
                    <Image Height="100" Width="100" Source="Resources/64b6fbdc3036fe793216621435b981d3.jpg" Stretch="UniformToFill" Margin="20,20,0,0"/>
                    <Image Height="100" Width="100" Source="Resources/64b6fbdc3036fe793216621435b981d3.jpg" Stretch="UniformToFill" Margin="20,20,0,0"/>
                    <Image Height="100" Width="100" Source="Resources/64b6fbdc3036fe793216621435b981d3.jpg" Stretch="UniformToFill" Margin="20,20,0,0"/>
                    <Image Height="100" Width="100" Source="Resources/64b6fbdc3036fe793216621435b981d3.jpg" Stretch="UniformToFill" Margin="20,20,0,0"/>
                    <Image Height="100" Width="100" Source="Resources/64b6fbdc3036fe793216621435b981d3.jpg" Stretch="UniformToFill" Margin="20,20,0,0"/>
                    <Image Height="100" Width="100" Source="Resources/64b6fbdc3036fe793216621435b981d3.jpg" Stretch="UniformToFill" Margin="20,20,0,0"/>
                    <Image Height="100" Width="100" Source="Resources/64b6fbdc3036fe793216621435b981d3.jpg" Stretch="UniformToFill" Margin="20,20,0,0"/>
                    <Image Height="100" Width="100" Source="Resources/64b6fbdc3036fe793216621435b981d3.jpg" Stretch="UniformToFill" Margin="20,20,0,0"/>
                </WrapPanel>
            </ScrollViewer>
            <DockPanel Background="#FFFEFFEC" Grid.Column="1">
                <DockPanel Background="#66008CFF" VerticalAlignment="Top" DockPanel.Dock="Top">
                    <Label Content="Label" Height="40" VerticalAlignment="Top"/>
                    <TextBox Text="TextBox" FontSize="20" MaxLines="1"/>
                </DockPanel>
                <Grid Background="#33F2FF00" DockPanel.Dock="Top" Height="300">
                    <Image Source="Resources/64b6fbdc3036fe793216621435b981d3.jpg"/>
                    <Grid Background="#33BF3737" Panel.ZIndex="1">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </Grid>
            </DockPanel>
        </Grid>
        <DockPanel LastChildFill="False" Grid.Row="3" Background="#667400FF"/>
        <DockPanel LastChildFill="False" Background="#4CF4FF00"/>
    </Grid>
</Window>
