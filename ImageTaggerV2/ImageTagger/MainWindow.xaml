<Window x:Class="ImageTagger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageTagger"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainPanel" Background="#FFFFF0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="2" Background="#3F529DB0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="49" Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Rectangle Fill="#FFF4F4F5" Stroke="Black"/>
            <GridSplitter HorizontalAlignment="Left" Width="3" Background="#00000000" Grid.Column="1"/>
            <Grid Grid.Column="1" Background="#33BF3737" Panel.ZIndex="1"/>
            <Image Grid.Column="1" Source="Resources/64b6fbdc3036fe793216621435b981d3.jpg"/>
        </Grid>
    </Grid>
</Window>
